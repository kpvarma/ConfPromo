<div class="header">

  <ul class="nav nav-pills pull-right">
    <% if @current_user %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= @current_user.name %> <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li class="dropdown-header">Profile</li>
          <li><%= link_to "My Profile", "#" %></li>
          <li class="divider"></li>
          <li><%= link_to raw("Sign Out"), sign_out_url, method: :delete %></li>
        </ul>
      </li>
    <% else %>
      <li>
        <%= link_to raw("Sign In"), sign_in_url %>
      </li>
    <% end %>

  </ul>
  <div class="cl-10"></div>
  <div class="visible-xs" style="border:1px solid #c1c1c1;margin-bottom:20px"></div>
</div>

