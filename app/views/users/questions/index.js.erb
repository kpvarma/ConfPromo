<% if @questions.any? %>
  // Fill the right box with first question details in the list
  $('#div_question_show').html("<%= escape_javascript(render(:partial=>'show')) %>");
  $('#div_question_details').html("<%= escape_javascript(render(:partial=>'details')) %>");
  initPopovers();

  // Rendering the item list
  $('#div_question_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
  $('#div_question_drop_down').html("<%= escape_javascript(theme_drop_down(@questions, :title, scope: :users))%>");
<% else %>
  var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
  $('#div_question_index').html(noResultsText);
  $('#div_question_show').html(noResultsText);
  $('#div_question_details').html("");
<% end %>