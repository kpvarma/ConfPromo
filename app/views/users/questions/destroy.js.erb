<% if @question %>
  <% if @question.new_record? %>

  	// Fill the right box with first question details
  	$('#div_question_details').html("<%= escape_javascript(render(:partial=>'summary')) %>");

  <% else %>

  	// Render the show partial to show flash message
  	$('#div_question_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  <% end %>

  // Render questions List
  $('#div_question_collections').html("<%= escape_javascript(render(:partial=>'index')) %>");

<% else %>

  var noResultsText = "<div id=\"div_questions_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_question_index').html(noResultsText);
  $('#div_question_details').html(noResultsText);

<% end %>
